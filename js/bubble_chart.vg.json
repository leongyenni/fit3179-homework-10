{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "An interactive scatter plot of global health statistics by country and year.",
  "data": {
    "url": "https://raw.githubusercontent.com/leongyenni/fit3179-homework-10/main/data/grouped-death-rates-vs-gdp-per-capita.csv",
    "format": {
      "parse": {
        "Death rate": "number",
        "GDP per capita": "number",
        "Year": "number"
      }
    }
},
  "width": 800,
  "height": 500,
   
  "layer": [
    {
      "transform": [
        {"filter": {"field": "Country", "equal": "Afghanistan"}},
        {"filter": {"param": "Year"}}
      ],
      "mark": {
        "type": "text",
        "fontSize": 100,
        "x": 420,
        "y": 250,
        "opacity": 0.06
      },
      "encoding": {"text": {"field": "Year"}}
    },
    {
      "transform": [
        {
          "lookup": "Continent",
          "from": {
            "key": "id",
            "fields": ["name"],
            "data": {
              "values": [
                {"id": "Asia", "name": "Asia"},
                {"id": "Africa", "name": "Africa"},
                {"id": "South America", "name": "South America"},
                {"id": "North America", "name": "North America"},
                {"id": "Europe", "name": "Europe"},
                {"id": "Oceania", "name": "Oceania"},
                {"id": "Unknown", "name": "World"}
              ]
            }
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "GDP per capita",
          "type": "quantitative",
          "scale": { "type": "log"},
          "axis": {"tickCount": 5, "title": "GDP per capita"}
        },
        "y": {
          "field": "Death rate",
          "type": "quantitative",
          "scale": {"type": "log"},
          "axis": {"tickCount": 5, "title": "Death rate"}
        }
      },
      "layer": [
        {
          "mark": {
            "type": "line",
            "size": 4,
            "color": "lightgray",
            "strokeCap": "round"
          },
          "encoding": {
            "detail": {"field": "Country"},
            "order": {"field": "Year"},
            "color": {
              "field": "Continent",
              "type": "nominal",
              "scale": {"scheme": "category20"},
              "legend": {
                "orient": "right",
                "padding": 20,
                "titleColor": "black",
                "labelColor": "black"
              }
            },
            "opacity": {
              "condition": {
                "test": {"or": [
                  {"param": "hovered", "empty": false},
                  {"param": "clicked", "empty": false}
                ]},
                "value": 0.8
              },
              "value": 0
            }
          }
        },
        {
          "params": [
            {
            "name": "Continent_selection",
            "select":{
                "type": "point",
                "fields": ["Continent"]
              },
            "bind": {
              "name": "Continent Selection: ",
              "input": "select",
              "options": [
                null,
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "labels": [
                "Show All",
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ]
              }
            },
            {"name": "grid", "select": "interval", "bind": "scales"},
            {
              "name": "Year",
              "value": [{"Year": 2000}],
              "select": {
                "type": "point",
                "fields": ["Year"]
              },
              "bind": {
                "name": "Year",
                "input": "range",
                "min": 2000, "max": 2019, "step": 1
              }
            },
            {
              "name": "hovered",
              "select": {
                "type": "point",
                "fields": ["Country"],
                "toggle": false,
                "on": "mouseover"
              }
            },
            {
              "name": "clicked",
              "select": {"type": "point", "fields": ["Country"]}
            }
          ],
          "transform": [
            {"filter": {"param": "Continent_selection"}}, 
            {"filter": {"param": "Year"}}],
            "mark": {
              "type": "circle", 
              "size": 210, 
              "opacity": 0.9, 
              "tooltip": true},
            "encoding": {
            "tooltip": [
              {"field": "Continent", "type": "nominal"},
              {"field": "Country", "type": "nominal"},
              {
                "field": "Death rate",
                "type": "quantitative",
                "format": ".2f"
              },
              {
                "field": "GDP per capita",
                "type": "quantitative",
                "format": ".2f"
              }
            ], 
            "color": {"field": "name", "title": "Continent"}
          }
        },
        {
          "transform": [
            {
              "filter": {
                "and": [
                  {"param": "Year"},
                  {"or": [
                    {"param": "clicked", "empty": false},
                    {"param": "hovered", "empty": false}
                  ]}
                ]
              }
            }
          ],
          "mark": {
            "type": "text",
            "yOffset": -12,
            "fontSize": 12,
            "fontWeight": "bold"
          },
          "encoding": {
            "text": {"field": "Country"},
            "color": {"field": "name", "title": "Country"}
          }
        },
        {
          "transform": [
            {"filter": {"param": "hovered", "empty": false}},
            {"filter": {"not": {"param": "Year"}}}
          ],
          "layer": [
            {
              "mark": {
                "type": "text",
                "yOffset": -12,
                "fontSize": 12,
                "color": "gray"
              },
              "encoding": {"text": {"field": "Year"}}
            },
            {"mark": {"type": "circle", "color": "gray"}}
          ]
        }
      ]
    }
  ],
  "config": {}
}
